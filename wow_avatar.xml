<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5" type="plugin" group="kunena" method="upgrade">
	<name>Kunena - WoW Avatar</name>
	<author>Branko Wilhelm</author>
	<creationDate>Jul 2013</creationDate>
	<copyright>Copyright (C) 2013 Branko Wilhelm. All rights reserved.</copyright>
	<license>GNU/GPLv3 http://www.gnu.org/licenses/gpl-3.0.html</license>
	<authorEmail>branko.wilhelm@gmail.com</authorEmail>
	<authorUrl>www.z-index.net</authorUrl>
	<version>@REVISION@</version>
	<description>load player Avatars directly from battle.net.</description>
	<files>
		<filename plugin="wow_avatar">wow_avatar.php</filename>
		<filename>index.html</filename>
		<filename>avatar.php</filename>
	</files>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="mapping" type="list" default="name" label="Mapping" description="Select the User-Field for Mapping with Character">
					<option value="name">Name</option>
					<option value="username">Username</option>
				</field>
				<field name="guild" type="text" default="" size="30" required="true" label="Guild" />
				<field name="realm" type="text" default="" size="30" required="true" label="Realm" />
				<field name="region" type="list" default="" required="true" label="Region">
					<option value="">-- select --</option>
					<option value="us">USA</option>
					<option value="eu">Europe</option>
					<option value="kr">Korea</option>
					<option value="tw">Taiwan</option>
					<option value="sea">Southeast Asia</option>
				</field>
				<field name="default" type="text" default="media/kunena/avatars/nophoto.jpg" required="true" label="Default" description="dont enter a full URL!" />
			</fieldset>
			<fieldset name="advanced">
				<field name="cache_time" type="text" filter="integer" default="60" size="5" required="true" label="Cache" description="How many minutes elapse until armory data is reloaded." />
				<field name="timeout" type="text" filter="integer" default="10" size="5" required="true" label="Timeout" description="Maximum waiting time for armory server answer (in seconds)." />
			</fieldset>
		</fields>
	</config>
	<updateservers>
		<server type="collection" priority="1" name="z-index development">http://www.z-index.net/en/extensions.xml</server>
	</updateservers>
</extension>